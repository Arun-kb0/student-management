
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id            Int      @id @default(autoincrement())
  name          String
  email         String   @unique
  phone         String
  borrowedBooks Loan[]   // One-to-many relationship to Loan model
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Book {
  id            Int      @id @default(autoincrement())
  title         String
  author        String
  genre         String
  loans         Loan[]   // One-to-many relationship to Loan model
  count         Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Loan {  // Relation model to connect User and Book
  id          Int      @id @default(autoincrement())
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  book        Book     @relation(fields: [bookId], references: [id])
  bookId      Int
  borrowedAt  DateTime @default(now())
  returnedAt  DateTime?
  status      LoanStatus
}

enum LoanStatus {
  BORROWED
  RETURNED
}
