<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home</title>

  <script src="/static/home.js" defer></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href=" https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">

  <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.30.1/moment-with-locales.min.js"
    integrity="sha512-4F1cxYdMiAW98oomSLaygEwmCnIP38pb4Kx70yQYqRwLVCs3DbRumfBq82T08g/4LJ/smbFGFpmeFlQgoDccgg=="
    crossorigin="anonymous" referrerpolicy="no-referrer"></script>

</head>

<body class="container-fluid bg-dark text-light">

  <!-- Page Header -->
  <header class="text-center my-4">
    <h1 class="display-4 text-white">Library</h1>
    <p class="lead text-secondary">Explore the collection of books</p>
    <div>
      <a class="btn btn-success  text-capitalize" href="/create"> Add New Book </a>
    </div>
  </header>


  <!-- Book Grid Section -->
  <section class="row justify-content-center">
    <% for(const book of books) { %>
      <div class="col-6 col-md-4 col-lg-3 mb-4" style="width: 18rem;">
        <div class="card text-white border-0 shadow-sm  text-center" style="background-color: #4B5454;">
          <img class="card-image-top" src="<%= book.image %>" alt="book image" style="height: 300px;">
          <div class="card-body p-2">
            <h4 class="card-title text-truncate text-light ">
              <%= book.title %>
            </h4>
            <p class="card-text  mb-1">by <%= book.author %>
            </p>
            <p class="card-text ">Genre: <%= book.genre %>
            </p>
            <a class="btn btn-primary mt-2 mx-3 w-50" href="<%= book.link %>">
              <i class="fa-solid fa-book"></i> Buy
            </a>
            <div>
              <a class="btn btn-primary btn-sm mt-2 mx-3" href="/edit?id=<%= book.id %>">
                <i class="fa-solid fa-pencil"></i>
              </a>

              <button class="btn btn-danger btn-sm mt-2 deleteBtn" data-id="<%= book.id %>">
                <i class="fa-solid fa-trash"></i>
              </button>

            </div>
          </div>
        </div>
      </div>
      <% } %>
  </section>

</body>


</html>