{
  "compilerOptions": {
    "target": "ES2020",
    "rootDir": "./",
    "outDir": "./dist",
    "types": [
      "node",
      "express"
    ],
    "module": "CommonJS",
    "moduleResolution": "Node10",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "public/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}